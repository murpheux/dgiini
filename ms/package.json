{
    "name": "dgiini",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Clement Onawole",
    "license": "MIT",
    "scripts": {
        "build-task": "parcel build src/task_api.js --out-dir dist/mstask --target node",
        "build-auth": "parcel build src/auth_api.js --out-dir dist/msauth --target node",
        "build-msg": "parcel build src/msg_api.js --out-dir dist/msmsg --target node",
        "build-bill": "parcel build src/bill_api.js --out-dir dist/msbill --target node",
        "watch-task": "parcel watch src/task_api.js --out-dir dist/mstask --target node",
        "watch-auth": "parcel watch src/auth_api.js --out-dir dist/msauth --target node",
        "watch-msg": "parcel watch src/msg_api.js --out-dir dist/msmsg --target node",
        "watch-bill": "parcel watch src/bill_api.js --out-dir dist/msbill --target node",
        "cp": "xargs -n 1 cp -v .env<<<\"dist/mstask/ dist/msauth/ dist/msmsg/\"",
        "build": "concurrently \"yarn build-task\" \"yarn build-auth\" \"yarn build-msg\"",
        "watch": "concurrently \"yarn watch-task\" \"yarn watch-auth\" \"yarn watch-msg\"",
        "run-prod": "NODE_ENV=production nodemon --exec babel-node --",
        "lint": "eslint src",
        "test": "mocha --require @babel/register",
        "serve": "nodemon --exec babel-node --",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "app-root-path": "^2.2.1",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.16.4",
        "fluent-validator": "^1.1.0",
        "fs": "^0.0.1-security",
        "got": "^9.6.0",
        "http-status-codes": "^1.3.2",
        "mongodb": "^3.2.7",
        "morgan": "^1.9.1",
        "nodemailer": "^6.2.1",
        "rotating-file-stream": "^1.4.1",
        "title-case": "^2.1.1",
        "uuid": "^3.3.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.4.4",
        "@babel/register": "^7.4.4",
        "@types/chai": "^4.1.7",
        "@types/dotenv": "^6.1.1",
        "@types/mocha": "^5.2.7",
        "@types/sinon": "^7.0.13",
        "babel-eslint": "^10.0.1",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "chokidar": "^3.0.0",
        "concurrently": "^4.1.1",
        "eslint": "^5.16.0",
        "mocha": "^6.1.4",
        "nodemon": "^1.19.0",
        "parcel-bundler": "^1.12.3",
        "pm2": "^3.5.0",
        "sinon": "^7.3.2"
    }
}
